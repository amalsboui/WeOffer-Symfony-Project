{% extends 'base.html.twig' %}


{% block title%}
    Profile
{% endblock %}
{% block links %}
<link rel="stylesheet" href="{{ asset('assets/css/profile.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mdi/font@latest/css/materialdesignicons.min.css">
{% endblock %}
{% block main %}
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    {% if user %}
                                    {% if user.imageUrl is not empty %}
                                    <img src="{{asset('assets/uploads/users/'~ user.imageUrl )}}" class="img-radius" alt="User-Profile-Image">
                                    {% else %}
                                    <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                                    {% endif %}
                                    {% endif %}
                                </div>

                                <h6 class="f-w-600">
                                    {% if user %}
                                        {% if user.name is defined and user.lastName is defined %}
                                            {{ user.name }} {{ user.lastName }}
                                        {% endif %}
                                    {% endif %}
                                </h6>
                                <p>
                                    {% if user %}
                                        {%if user.job is defined %}
                                            {{ user.job }}
                                        {% endif %}
                                    {% endif %}
                                </p>
                                <form action="{{ path('profileupdate')}}" method="post">
                                    <a href="{{ path('profileupdate')}}" class="btn btn-info">
                                        <i class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                    </a>
                                </form>

                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400">
                                            {% if user %}
                                                {%if user.email is defined %}
                                                    {% if user.email %}
                                                        {{ user.email }}
                                                    {% endif %}
                                                {% endif %}
                                            {% endif %}
                                        </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">City</p>
                                        <h6 class="text-muted f-w-400">
                                            {% if user %}
                                                {% if user.city is defined %}
                                                    {{ user.city }}
                                                {% endif %}
                                            {% endif %}
                                        </h6>
                                    </div>
                                </div>
                                {% if user %}
                                {% if user.userType is defined %}
                                {% if user.userType == "job_seeker" %}
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Projects</h6>
                                {% else %}
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Entreprise</h6>
                                {% endif %}
                                {% endif %}
                                {% endif %}
                               <div class="row">
                                        <h6 class="text-muted f-w-400">{{ user.personalInfo }}</h6>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}