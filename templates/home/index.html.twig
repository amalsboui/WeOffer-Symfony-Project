{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block main %}

<main class="container d-flex flex-wrap flex-row justify-content-evenly mt-3 mb-3 ">
    {% for job in jobs %}
        <div class="card w3-theme-l5 mt-3 mb-3" style="width: 100%;">
            <div class="card-body d-flex flex-column ">
                <div class="card-title">{{ "üöÄ" ~ job.position }}</div>
                <span class="text-muted font-italic">{{ job.createdAt  | date('Y-m-d') }}</span>
               {# <span class="text-muted font-italic">{{ jobTimes[job.id] }}</span> #}
                <div class="tags mb-2 mt-1">
                    <span class="badge bg-secondary">{{ job.employmentType }}</span>
                    <span class="badge bg-primary">{{ job.category }}</span>
                </div>
                <p class="card-text">{{ job.description | slice(0, 284) ~ '...' }}</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item w3-theme-l5">{{ "üß±" ~ job.entreprise }}</li>
                    <li class="list-group-item w3-theme-l5">{{ "üìç" ~ job.location }}</li>
                </ul>
               <a href="{{ path('job_details', { 'id': job.id }) }}" class="btn btn-primary w3-theme-d4 align-self-end mt-auto">See More</a>
            </div>
        </div>
    {% endfor %}
</main>
{% endblock %}
